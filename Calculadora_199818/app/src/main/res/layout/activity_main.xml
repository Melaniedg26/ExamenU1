        android:layout_marginStart="6dp"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/dos"
        app:layout_constraintStart_toEndOf="@+id/dos" />

    <Button
        android:id="@+id/borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintBaseline_toBaselineOf="@+id/total"
        app:layout_constraintStart_toStartOf="@+id/tres" />

    <Button
        android:id="@+id/resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/seis"
        app:layout_constraintStart_toEndOf="@+id/seis" />

    <Button
        android:id="@+id/multiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="*"
        app:layout_constraintBaseline_toBaselineOf="@+id/tres"
        app:layout_constraintStart_toEndOf="@+id/tres" />

    <Button
        android:id="@+id/division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/borrar"
        app:layout_constraintStart_toStartOf="@+id/multiplicacion" />

    <TextView
        android:id="@+id/numero"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginTop="215dp"
        android:layout_marginBottom="359dp"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/resultado"
